<% @title = "Listing courses" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Courses/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
  <%= link_to new_course_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> Add Course
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td class="actions">
            <%= link_to icon_tag("eye-open"), course, rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_course_path(course), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash"), course, rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->


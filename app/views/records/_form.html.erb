<style type="text/css">
  .time {
    font-weight: bold;
    font-size: 35px;
  }
</style>
<%= form_for(@record, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span1">
        <div class="row-fluid">
          <div class="span1">
            <span class="icon-time"/><br/><br/><br/>
            <span class="time"><span class="minutes">5</span>'<span class="seconds">59</span>"</span>
          </div>
        </div>
      </div>
      <div class="span10">
        <div class="row-fluid">
          <div class="span3">
            <%= f.label :teacher, class: 'control-label' %><br/><br/>
            <a class="btn">P</a>
            <a class="btn">C</a>
            <a class="btn">A</a>
            <a class="btn">D</a><br/>
            <a class="btn">RW</a>
            <a class="btn">L</a>
            <a class="btn">O</a>
          </div>
          <div class="span3">
            <%= f.label :student, class: 'control-label' %><br/><br/>
            <a class="btn">P</a>
            <a class="btn">C</a>
            <a class="btn">A</a>
            <a class="btn">D</a><br/>
            <a class="btn">RW</a>
            <a class="btn">L</a>
            <a class="btn">O</a>
          </div>
          <div class="span3">
            <%= f.label :grouping, class: 'control-label' %><br/><br/>
            <a class="btn">i</a>
            <a class="btn">p</a>
            <a class="btn">s</a><br/>
            <a class="btn">w</a>
            <a class="btn">f</a>
            <a class="btn">o</a>
          </div>
          <div class="span3">
            <%= f.label :topic, class: 'control-label' %><br/><br/>
            <a class="btn">cc</a>
            <a class="btn">rs</a><br/>
            <a class="btn">m</a>
            <a class="btn">d</a>
            <a class="btn">o</a>
          </div>
        </div>
      </div>
      <div class="span1">
            <span class="icon-info-sign"/>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= f.label :notes, class: 'control-label' %><br/><br/>
        <textarea class="field span12" id="textarea" rows="6" placeholder="Notes"></textarea>
      </div>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", records_path, class: 'btn' %>
  </div>
<% end %>

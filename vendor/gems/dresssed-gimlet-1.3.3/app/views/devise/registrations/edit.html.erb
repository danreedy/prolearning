<% @title = "Edit #{resource_name.to_s.humanize}" %>

<%= form_for resource, :as => resource_name, :url => registration_path(resource_name),
                       :html => { :method => :put, :novalidate => true, :class => "form-horizontal" } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.control_group :email do |f| %>
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email, :required => true, :autofocus => true, :class => "span3" %>
        <%= f.error_messages %>
      </div>
    <% end %>
  
    <%= f.control_group :password do |f| %>
      <%= f.label :password, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :password, :class => "span3" %>
        <%= f.error_messages %>
        <div class="help-block">
          Leave it blank if you don't want to change it.
        </div>
      </div>
    <% end %>
  
    <%= f.control_group :password_confirmation do |f| %>
      <%= f.label :password_confirmation, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :password_confirmation, :class => "span3" %>
        <%= f.error_messages %>
      </div>
    <% end %>
  
    <%= f.control_group :current_password do |f| %>
      <%= f.label :current_password, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :current_password, :class => "span3" %>
        <%= f.error_messages %>
        <div class="help-block">
          We need your current password to confirm your changes.
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update", :class => 'btn btn-primary' %>
    <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class => "btn btn-danger" %>
  </div>
<% end %>

<% @title = "Forgot your password?" %>

<%= form_for resource, :as => resource_name, :url => password_path(resource_name),
                       :html => { :method => :post, :class => "span5" } do |f| %>
  <%= f.error_notification %>

  <div class="sheet form-sheet form-inputs">
    <div class="sheet-inner">
      <%= f.control_group :email do |f| %>
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true, :class => "span3" %>
          <%= f.error_messages %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %>
    or
    <%= link_to "Sign in", new_session_path(resource_name), :class => 'btn' %>
  </div>
<% end %>

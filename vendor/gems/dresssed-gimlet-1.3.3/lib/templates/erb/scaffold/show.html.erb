<%% @title = "Showing <%= singular_table_name %>" %>

<div class="form-horizontal">
<% attributes.each do |attribute| -%>
  <div class="control-group">
    <label class="control-label"><%= attribute.human_name %></label>
    <div class="controls">
      <span class="uneditable-input span6"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></span>
    </div>
  </div>
  
<% end -%>
  <div class="form-actions">
    <%%= link_to icon_tag("pencil") + ' Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), <%= key_value :class, "'btn btn-primary'" %> %>
    <%%= link_to 'Back', <%= index_helper %>_path, <%= key_value :class, "'btn'" %> %>
  </div>
</div>


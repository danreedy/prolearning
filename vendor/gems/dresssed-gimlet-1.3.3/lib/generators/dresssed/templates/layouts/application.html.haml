- content_for :navbar, render("layouts/user_nav")

= render :layout => "layouts/base" do
  .page-header
    .row
      .span7
        %h2= @title
        = yield :description
      .span2
        = yield :actions

  .row
    #content.span9
      = yield

    #sidebar.span3
      %h6 Menu
      %p

      %ul.nav.nav-tabs.nav-stacked.nav-caret-left
        = activatable_li_tag_with_link "Sub menu", "#"
